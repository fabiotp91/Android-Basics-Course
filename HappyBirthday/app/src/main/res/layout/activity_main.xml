<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fabiotp.happybirthday.MainActivity">

    <!-- Business Card -->
    <TextView
        android:text="Business Card"
        android:id="@+id/businesscard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1976D2"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light" />

    <!-- Photo -->
    <ImageView
        android:src="@drawable/fabio"
        android:id="@+id/image"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="46dp"
        android:layout_below="@id/businesscard"/>

    <!-- Name -->
    <TextView
        android:text="Fabio Trilho Pereira"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/businesscard"/>

    <!-- Age -->
    <TextView
        android:text="Age: 26"
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/name"/>

    <!-- From -->
    <TextView
        android:text="From: Portugal"
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/age"/>

    <!-- Occupation -->
    <TextView
        android:text="Occupation"
        android:id="@+id/occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/from"/>

    <!-- Web Design -->
    <TextView
        android:text="Web Design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/occupation"/>

    <!-- Website -->
    <ImageView
        android:src="@drawable/website"
        android:id="@+id/website"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:layout_below="@id/image"/>

    <TextView
        android:text="www.fabiotp.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:layout_below="@id/image"
        android:layout_toRightOf="@id/website" />

    <!-- Email -->
    <ImageView
        android:src="@drawable/email"
        android:id="@+id/email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/website"/>

    <TextView
        android:text="hello@fabiotp.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:layout_below="@id/website"
        android:layout_toRightOf="@id/email" />

    <!-- Phone -->
    <ImageView
        android:src="@drawable/phone"
        android:id="@+id/phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/email"/>

    <TextView
        android:text="+351936672769"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:layout_below="@id/email"
        android:layout_toRightOf="@id/email" />

    <!-- Facebook -->
    <ImageView
        android:src="@drawable/facebook"
        android:id="@+id/facebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/phone"/>

    <TextView
        android:text="fb.com/fabiotp91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:layout_below="@id/phone"
        android:layout_toRightOf="@id/facebook" />

    <!-- Twitter -->
    <ImageView
        android:src="@drawable/twitter"
        android:id="@+id/twitter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/facebook"/>

    <TextView
        android:text="twitter.com/fabiotrilho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:layout_below="@id/facebook"
        android:layout_toRightOf="@id/twitter" />

</RelativeLayout>